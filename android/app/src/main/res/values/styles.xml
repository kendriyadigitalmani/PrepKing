<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Launch Theme - Shown during native splash screen -->
    <style name="LaunchTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Normal Theme - Used after Flutter loads -->
    <style name="NormalTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>